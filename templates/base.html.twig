<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}Therapist Booking{% endblock %}</title>

        {# Stylesheets â€“ you can replace with your own CSS or use Bootstrap + custom #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            /* Custom base styles */
            body {
                padding-top: 4.5rem;
            }
            .navbar-brand {
                font-weight: bold;
            }
            .footer {
                background-color: #f8f9fa;
                padding: 1rem 0;
                margin-top: 4rem;
                font-size: 0.9rem;
            }
            .nav-link.active {
                font-weight: 600;
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        {# Header / Navbar #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top shadow-sm">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">Therapist Booking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {# Links common to all logged-in users (clients) #}



                        
                        {% if is_granted('ROLE_USER') %}
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_appointment_' %}active{% endif %}"
                                   href="{{ path('app_appointment_index') }}">
                                    My Appointments
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'client_therapist_index' %}active{% endif %}"
                                   href="{{ path('client_therapist_index') }}">
                                    Therapists
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if app.request.attributes.get('_route') == 'app_account_index' %}active{% endif %}"
                                   href="{{ path('app_account_index') }}">
                                    My Account
                                </a>
                            </li>
                        {% endif %}

                        {# Admin-only links #}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle {% if app.request.attributes.get('_route') starts with 'admin_' %}active{% endif %}"
                                   href="#" id="adminMenu" role="button" data-bs-toggle="dropdown">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item" href="{{ path('admin_therapist_index') }}">Manage Therapists</a></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_appointment_index') }}">Manage Appointments</a></li>
                                    {# Add more admin links here when needed #}
                                </ul>
                            </li>
                        {% endif %}
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        {% if app.user %}
                            <li class="nav-item">
                                <form method="post" action="{{ path('app_logout') }}" class="d-inline">
                                    <button type="submit" class="btn btn-outline-secondary">Logout</button>
                                </form>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="btn btn-primary" href="{{ path('app_login') }}">Login</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# Main Content #}
        <main class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-4">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        {# Footer #}
        <footer class="footer text-center">
            <div class="container">
                <p>&copy; {{ "now"|date("Y") }} Therapist Booking. All rights reserved.</p>
                {% if is_granted('ROLE_ADMIN') %}
                    <p><small>You are logged in as <strong>Administrator</strong>.</small></p>
                {% elseif app.user %}
                    <p><small>Logged in as <strong>{{ app.user.email }}</strong>.</small></p>
                {% else %}
                    <p><small><a href="{{ path('app_register') }}">Register</a> or <a href="{{ path('app_login') }}">Login</a>.</small></p>
                {% endif %}
            </div>
        </footer>

        {# Scripts #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
