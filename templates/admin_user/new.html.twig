{% extends 'base.html.twig' %}

{% block title %}Add User | Therapist Booking{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Add New User</h1>
        <a href="{{ path('app_admin_user') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    {{ form_start(userForm) }}
        <div class="mb-3">
            {{ form_label(userForm.firstName) }}
            {{ form_widget(userForm.firstName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.firstName) }}
        </div>

        <div class="mb-3">
            {{ form_label(userForm.lastName) }}
            {{ form_widget(userForm.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.lastName) }}
        </div>

        <div class="mb-3">
            {{ form_label(userForm.email) }}
            {{ form_widget(userForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(userForm.phone) }}
            {{ form_widget(userForm.phone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.phone) }}
        </div>

        <div class="mb-3">
            {{ form_label(userForm.plainPassword) }}
            {{ form_widget(userForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(userForm.plainPassword) }}
        </div>

        {% if userForm.roles is defined %}
            <div class="mb-3">
                {{ form_label(userForm.roles) }}
                {{ form_widget(userForm.roles) }}
                {{ form_errors(userForm.roles) }}
            </div>
        {% endif %}

        <button type="submit" class="btn btn-success">Create User</button>
    {{ form_end(userForm) }}
</div>
{% endblock %}
