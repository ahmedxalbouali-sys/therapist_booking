{% extends 'base.html.twig' %}

{% block title %}Welcome | Therapist Booking{% endblock %}

{% block body %}

<style>
    /* Hero Section */
    .hero {
        background: linear-gradient(135deg, #6ea8fe 0%, #4e73df 100%);
        color: white;
        padding: 4rem 2rem;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        text-align: center;
        margin-bottom: 3rem;
    }

    .hero h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        opacity: 0.95;
    }

    /* Feature Cards */
    .feature-card {
        border: none;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        background: #fff;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .feature-card h5 {
        font-weight: 600;
        margin-top: 1rem;
    }

    .cta-btn {
        padding: 0.8rem 2rem;
        font-size: 1.1rem;
        border-radius: 0.8rem;
    }
</style>

<div class="hero">
    <h1>Your Wellness, Our Priority</h1>
    <p>Book appointments with trusted and certified therapists effortlessly.</p>

    {% if app.user %}
        <a href="{{ path('app_appointment_index') }}" class="btn btn-light btn-lg cta-btn mt-3">
            View My Appointments
        </a>
    {% else %}
        <a href="{{ path('app_register') }}" class="btn btn-light btn-lg cta-btn mt-3 me-2">
            Get Started
        </a>
        <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg cta-btn mt-3">
            Login
        </a>
    {% endif %}
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="feature-card">
            <div class="mb-3">
                <i class="bi bi-calendar2-check" style="font-size: 2.5rem; color: #4e73df;"></i>
            </div>
            <h5>Easy Online Booking</h5>
            <p>Schedule your therapy sessions with just a few clicks.</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="feature-card">
            <div class="mb-3">
                <i class="bi bi-people" style="font-size: 2.5rem; color: #4e73df;"></i>
            </div>
            <h5>Certified Therapists</h5>
            <p>Access a list of qualified professionals tailored to your needs.</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="feature-card">
            <div class="mb-3">
                <i class="bi bi-shield-check" style="font-size: 2.5rem; color: #4e73df;"></i>
            </div>
            <h5>Secure & Private</h5>
            <p>Your information is protected with industry-standard security.</p>
        </div>
    </div>
</div>

{% if app.user %}
    <div class="text-center mb-5">
        <h3 class="fw-bold">Welcome back, {{ app.user.email }}!</h3>
        <p class="text-muted">Continue where you left off.</p>

        <a href="{{ path('client_therapist_index') }}" class="btn btn-primary btn-lg cta-btn mt-3">
            Browse Therapists
        </a>
    </div>
{% endif %}

{% endblock %}
