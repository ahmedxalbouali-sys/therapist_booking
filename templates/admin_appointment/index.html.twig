{% extends 'base.html.twig' %}

{% block title %}All Appointments | Admin{% endblock %}

{% block stylesheets %}
<style>
    /* Card container for table */
    .card-custom {
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.1);
        padding: 2rem;
        background-color: #fff;
        margin-top: 2rem;
        overflow-x: auto;
    }

    /* Table styling */
    .table {
        border-collapse: separate;
        border-spacing: 0 0.5rem;
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
        color: #2b4c7e;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .table td {
        background-color: #fff;
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1rem;
    }

    .table tbody tr:hover td {
        background-color: #eef4ff;
        transition: background 0.2s ease-in-out;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.45em 0.7em;
        border-radius: 0.5rem;
        font-weight: 500;
    }

    .btn-action {
        margin-right: 0.25rem;
        margin-bottom: 0.25rem;
        transition: all 0.2s ease-in-out;
    }

    .btn-action:hover {
        transform: translateY(-2px);
    }

    .btn-create {
        margin-top: 1rem;
    }

    .text-muted-small {
        font-size: 0.85rem;
        color: #6c757d;
    }

    /* Responsive scroll for small devices */
    @media (max-width: 991px) {
        .card-custom {
            padding: 1rem;
        }
        .table td, .table th {
            padding: 0.5rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center">
        <h1 class="fw-bold ">All Appointments</h1>
        <a href="{{ path('admin_appointment_new') }}" class="btn btn-success btn-create">
            <i class="fas fa-plus me-1"></i> Create Appointment
        </a>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mt-3" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Filter Form #}
    <form method="get" action="{{ path('admin_appointment_index') }}" class="row g-2 mt-4 mb-4">
        <div class="col-md-3">
            <input type="text" name="client" class="form-control" placeholder="Client name" value="{{ app.request.get('client') }}">
        </div>
        <div class="col-md-3">
            <input type="text" name="therapist" class="form-control" placeholder="Therapist name" value="{{ app.request.get('therapist') }}">
        </div>
        <div class="col-md-3">
            <input type="date" name="date" class="form-control" value="{{ app.request.get('date') }}">
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    {# Table Card #}
    <div class="card-custom">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Client</th>
                    <th>Therapist</th>
                    <th>Start Time</th>
                    <th>Status</th>
                    <th>Notes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in appointments %}
                <tr>
                    <td>{{ appointment.id }}</td>

                    {# Client Details #}
                    <td>
                        <strong>{{ appointment.client.firstName }} {{ appointment.client.lastName }}</strong><br>
                        <span class="text-muted-small">{{ appointment.client.email }}</span><br>
                        <span class="text-muted-small">{{ appointment.client.phone }}</span>
                    </td>

                    {# Therapist Details #}
                    <td>
                        <strong>{{ appointment.therapist.name }}</strong><br>
                        <span class="text-muted-small">{{ appointment.therapist.specialization }}</span><br>
                        <span class="text-muted-small">{{ appointment.therapist.email }}</span><br>
                        <span class="text-muted-small">{{ appointment.therapist.phone }}</span>
                    </td>

                    {# Start Time #}
                    <td>{{ appointment.startAt ? appointment.startAt|date('Y-m-d H:i') : '-' }}</td>

                    {# Status Badge #}
                    <td>
                        {% if appointment.status == 'scheduled' %}
                            <span class="badge bg-warning text-dark">Scheduled</span>
                        {% elseif appointment.status == 'in_progress' %}
                            <span class="badge bg-info text-white">In Progress</span>
                        {% elseif appointment.status == 'completed' %}
                            <span class="badge bg-success">Completed</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ appointment.status|capitalize }}</span>
                        {% endif %}
                    </td>

                    <td>{{ appointment.notes ?: '-' }}</td>

                    {# Actions Buttons #}
                    <td class="d-flex flex-wrap gap-1">
                        <a href="{{ path('admin_appointment_show', {'id': appointment.id}) }}" class="btn btn-outline-info btn-sm btn-action">
                            <i class="fas fa-eye me-1"></i> Show
                        </a>
                        <a href="{{ path('admin_appointment_edit', {'id': appointment.id}) }}" class="btn btn-outline-primary btn-sm btn-action">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        {{ include('admin_appointment/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center py-4 text-muted">No appointments found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
{% endblock %}
{% endblock %}
