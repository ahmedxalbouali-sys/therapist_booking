{% extends 'base.html.twig' %}

{% block title %}All Appointments | Admin{% endblock %}

{% block body %}
<div class="container py-4">

    <h1 class="mb-4">All Appointments</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Filter Form #}
    <form method="get" action="{{ path('admin_appointment_index') }}" class="row g-2 mb-4">
        <div class="col-md-3">
            <input type="text" name="client" class="form-control" placeholder="Client name" value="{{ app.request.get('client') }}">
        </div>
        <div class="col-md-3">
            <input type="text" name="therapist" class="form-control" placeholder="Therapist name" value="{{ app.request.get('therapist') }}">
        </div>
        <div class="col-md-3">
            <input type="date" name="date" class="form-control" value="{{ app.request.get('date') }}">
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    {# Appointments Table #}
    <div class="table-responsive shadow-sm">
        <table class="table table-hover table-striped align-middle">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Client</th>
                    <th>Therapist</th>
                    <th>Start Time</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for appointment in appointments %}
                <tr>
                    <td>{{ appointment.id }}</td>
                    <td>{{ appointment.client.firstName }} {{ appointment.client.lastName }}</td>
                    <td>{{ appointment.therapist.name }}</td>
                    <td>{{ appointment.startAt|date('Y-m-d H:i') }}</td>
                    <td>
                        {% if appointment.status == 'Pending' %}
                            <span class="badge bg-warning text-dark">Pending</span>
                        {% elseif appointment.status == 'Confirmed' %}
                            <span class="badge bg-success">Confirmed</span>
                        {% elseif appointment.status == 'Cancelled' %}
                            <span class="badge bg-danger">Cancelled</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ appointment.status }}</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_appointment_show', {'id': appointment.id}) }}" class="btn btn-info btn-sm me-1">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        <a href="{{ path('admin_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary btn-sm me-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {{ include('admin_appointment/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6" class="text-center">No appointments found.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
{% endblock %}
