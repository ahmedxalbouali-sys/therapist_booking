{% extends 'base.html.twig' %}

{% block title %}All Appointments{% endblock %}

{% block body %}
<h1>All Appointments</h1>

{# Display flash messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<form method="get" action="{{ path('admin_appointment_index') }}" class="mb-3">
    <input type="text" name="client" placeholder="Client name" value="{{ app.request.get('client') }}">
    <input type="text" name="therapist" placeholder="Therapist name" value="{{ app.request.get('therapist') }}">
    <input type="date" name="date" value="{{ app.request.get('date') }}">
    <button type="submit" class="btn btn-primary btn-sm">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Client</th>
            <th>Therapist</th>
            <th>Start Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for appointment in appointments %}
        <tr>
            <td>{{ appointment.id }}</td>
            <td>{{ appointment.client.firstName }} {{ appointment.client.lastName }}</td>
            <td>{{ appointment.therapist.name }}</td>
            <td>{{ appointment.startAt|date('Y-m-d H:i') }}</td>
            <td>{{ appointment.status }}</td>
            <td>
                <a href="{{ path('admin_appointment_show', {'id': appointment.id}) }}" class="btn btn-info btn-sm">Show</a>
                <a href="{{ path('admin_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                {{ include('admin_appointment/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr><td colspan="6">No appointments found.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
