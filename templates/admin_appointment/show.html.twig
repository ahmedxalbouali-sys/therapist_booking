{% extends 'base.html.twig' %}

{% block title %}Appointment Details{% endblock %}

{% block body %}
<div class="container py-4">

    <h1 class="mb-4">Appointment Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Appointment #{{ appointment.id }}</h5>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Client:</strong> {{ appointment.client.firstName }} {{ appointment.client.lastName }}</li>
                <li class="list-group-item"><strong>Therapist:</strong> {{ appointment.therapist.name }}</li>
                <li class="list-group-item"><strong>Start Time:</strong> {{ appointment.startAt|date('Y-m-d H:i') }}</li>
                <li class="list-group-item">
                    <strong>Status:</strong>
                    {% if appointment.status == 'Pending' %}
                        <span class="badge bg-warning text-dark">Pending</span>
                    {% elseif appointment.status == 'Confirmed' %}
                        <span class="badge bg-success">Confirmed</span>
                    {% elseif appointment.status == 'Cancelled' %}
                        <span class="badge bg-danger">Cancelled</span>
                    {% else %}
                        <span class="badge bg-secondary">{{ appointment.status }}</span>
                    {% endif %}
                </li>
                <li class="list-group-item"><strong>Notes:</strong> {{ appointment.notes ?: 'N/A' }}</li>
            </ul>

            <div class="d-flex gap-2">
                <a href="{{ path('admin_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Edit
                </a>
                <a href="{{ path('admin_appointment_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
{% endblock %}
