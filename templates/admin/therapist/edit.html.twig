{% extends 'base.html.twig' %}

{% block title %}Edit Therapist{% endblock %}

{% block body %}
<div class="container py-4">

    <h1 class="mb-4">Edit Therapist</h1>

    {# Flash messages at the top #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card shadow-sm mb-4">
        <div class="card-body">

            {# Therapist Form #}
            {{ include('admin/therapist/_form.html.twig', {
                button_label: 'Update Therapist'
            }) }}

        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('admin_therapist_index') }}" class="btn btn-outline-secondary">
            ‚Üê Back to List
        </a>

        {# Delete button/form #}
        <div>
            {{ include('admin/therapist/_delete_form.html.twig') }}
        </div>
    </div>

</div>
{% endblock %}
