{% extends 'base.html.twig' %}

{% block title %}Therapist Details{% endblock %}

{% block stylesheets %}
<style>
    .card-custom {
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        padding: 2rem;
        background-color: #fff;
        margin-top: 2rem;
    }

    .table th {
        width: 200px;
    }

    .table img {
        max-width: 200px;
        border-radius: 6px;
    }

    .btn-action {
        margin-right: 0.25rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Therapist Details</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card card-custom">
        <table class="table table-bordered align-middle">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ therapist.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ therapist.name }}</td>
                </tr>
                <tr>
                    <th>Specialization</th>
                    <td>{{ therapist.specialization }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ therapist.email }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ therapist.phone }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ therapist.description }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td>
                        {% if therapist.photo %}
                            <img src="{{ asset('uploads/therapists/' ~ therapist.photo) }}" alt="{{ therapist.name }}">
                        {% else %}
                            <span class="text-muted">No photo available</span>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('admin_therapist_index') }}" class="btn btn-secondary btn-action">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a href="{{ path('admin_therapist_edit', {'id': therapist.id}) }}" class="btn btn-primary btn-action">
                <i class="fas fa-edit"></i> Edit
            </a>
           
        </div>
    </div>
</div>

{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
{% endblock %}
{% endblock %}
