{% extends 'base.html.twig' %}

{% block title %}Appointment Details | Therapist Booking{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Appointment Details</h2>
        <div>
            <a href="{{ path('app_appointment_index') }}" class="btn btn-outline-secondary me-2">Back to List</a>
            <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}" class="btn btn-primary" style="background:#2b4c7e; border:none;">Edit</a>
        </div>
    </div>

    <div class="card shadow-sm p-4 bg-white rounded">
        <table class="table table-borderless mb-0">
            <tbody>
                <tr>
                    <th scope="row" style="width: 150px;">ID</th>
                    <td>{{ appointment.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Date & Time</th>
                    <td>{{ appointment.startAt ? appointment.startAt|date('Y-m-d H:i') : '—' }}</td>
                </tr>
                <tr>
                    <th scope="row">Therapist</th>
                    <td>{{ appointment.therapist.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Specialization</th>
                    <td>{{ appointment.therapist.specialization }}</td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td>
                        {% if appointment.status == 'scheduled' %}
                            <span class="badge bg-warning text-dark">{{ appointment.status|capitalize }}</span>
                        {% elseif appointment.status == 'completed' %}
                            <span class="badge bg-success">{{ appointment.status|capitalize }}</span>
                        {% elseif appointment.status == 'cancelled' %}
                            <span class="badge bg-danger">{{ appointment.status|capitalize }}</span>
                        {% else %}
                            <span class="badge bg-secondary">{{ appointment.status|capitalize }}</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th scope="row">Notes</th>
                    <td>{{ appointment.notes ?: '—' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-4 text-center">
            {{ include('appointment/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 700px;
        margin: 0 auto;
    }

    .table th {
        font-weight: 600;
        color: #2b4c7e;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.45em 0.7em;
        border-radius: 0.5rem;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d !important;
        color: #fff !important;
    }
</style>
{% endblock %}
